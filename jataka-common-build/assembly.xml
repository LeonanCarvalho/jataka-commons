<assembly>
	<id>jataka-commons-build</id>
	<formats>
		<format>tar.gz</format>
	</formats>

	<!-- DONOT include base directory so we could easily include this into RPM 
		build -->
	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<!-- Copy installation Scripts -->
		<fileSet>
			<directory>${resources.home}/install</directory>
			<outputDirectory>/install</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
			<fileMode>755</fileMode>
		</fileSet>


		<fileSet>
			<directory>${resources.home}/jataka-common</directory>
			<outputDirectory>/jataka-common</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
	</fileSets>

</assembly>
