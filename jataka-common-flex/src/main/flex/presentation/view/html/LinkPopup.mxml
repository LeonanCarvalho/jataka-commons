<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/halo"
			   xmlns:crud="presentation.view.crud.*"
			   width="500" height="120" 
			   close="onClose(event);" 
			   name="LinkPopUp" 
			   cornerRadius="3"
			   title="@Resource(bundle='htmleditor', key='htmleditor.linkpopup.title')" >
	
	<fx:Script>
		<![CDATA[
			import mx.core.IFlexDisplayObject;
			import mx.events.CloseEvent;
			import mx.managers.PopUpManager;
			
			public var editor:HtmlEditor;
			
			protected function onClose(event:CloseEvent):void {
				PopUpManager.removePopUp(event.currentTarget as IFlexDisplayObject);
			}
			
			protected function okClickHandler(event:MouseEvent):void {
				PopUpManager.removePopUp(this);
				
				if (editor!=null){
					editor.onLinkChangeHandler(event, httpLink.text);
				}
			}
			
		]]>
	</fx:Script>
	
	<s:VGroup width="100%" height="100%">
		<s:Form id="linkPopupForm" width="100%">
			<s:layout>
				<s:FormLayout id="linkPopupFormLay" gap="-10" paddingLeft="-10" paddingBottom="-10"/>
			</s:layout>
			
			<crud:FormItem label="@Resource(bundle='htmleditor', key='htmleditor.linkpopup.href')"
						   required="true">
				<s:TextInput id="httpLink" width="100%" height="22" text="http://"/>
			</crud:FormItem>
		</s:Form>	
		
		<s:HGroup width="100%" horizontalAlign="center">
			<s:Button label="@Resource(bundle='htmleditor', key='htmleditor.linkpopup.okbutton')" click="okClickHandler(event)"/>
		</s:HGroup>
	
	</s:VGroup>
</s:TitleWindow>