<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" useHandCursor="true" buttonMode="true" click="onClick(event)">
	
	<fx:Script>
		<![CDATA[		
			public function onClick(event:MouseEvent): void{
				this.dispatchEvent(new IconListItemClickEvent(event, data));				
			}
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected" />
	</s:states>
	
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>

	<s:HGroup verticalAlign="middle" paddingBottom="1" paddingTop="1" paddingLeft="4">
		<s:Image source="{data.image}" width="64" height="64" alpha.hovered=".5"/>
		<s:VGroup paddingLeft="10">
			<s:Label text="{data.text}" color="#0473B2" fontSize="16" fontWeight="bold"/>
			<s:Label text="{data.desc}" color="black" fontSize="12" fontWeight="normal" lineBreak="explicit"  />
		</s:VGroup>
	</s:HGroup>
	<s:Line width="100%" visible="{data.lastItem}">
		<s:stroke>
			<s:SolidColorStroke color="gray" alpha=".6" weight="1"/>
		</s:stroke>
	</s:Line>	
</s:ItemRenderer>
